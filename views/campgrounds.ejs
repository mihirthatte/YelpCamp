<% include partials/header %>

<div class = "container">
	<header class = "jumbotron">
		<div class = "container">
			<h1> Welcome to Campgrounds Page </h1>
			<p> View our camp-sites from Indiana state</p>
			<p>
				<a class = "btn btn-primary btn-lg"href = "/campgrounds/new"> Add new Campgrounds </a>
			</p>
		</div>
	</header>
	
	<div class = "row">
		<div class = "col-lg-12">
			<h3> Our most visted sites</h3>
		</div>
	</div>
	
	<div class = "row text-center" style = "display:flex; flex-wrap:wrap">
		<% campground.forEach(function(grounds){ %>
		<div class = "col-md-3 col-sm-6">
			<div class = "thumbnail">
				<img style="width: 100%;height: 250px;" src = "<%= grounds.image %>" >
				<div class = "caption">
					<h4> <%= grounds.name %> </h4>
				</div>
			</div>
		</div>
	<% }); %>
	</div>
</div>
<% include partials/footer%>

